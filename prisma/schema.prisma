generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PurgedServer {
  id Int @id @default(autoincrement())
  serverId String @unique
  name String
  ownerId String
  memberCount Int
  premiumTier String
  emojiCount Int
  killerId Int
  emojis Emojis[]
  killer Deathbringer @relation(fields: [killerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Deathbringer {
  id Int @id @default(autoincrement())
  username String
  userId String
  killedServersCount Int
  removedVoiceChannels Int
  removedTextChannels Int
  killedServers PurgedServer[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Emojis {
  id Int @id @default(autoincrement())
  name String
  url String 
  serverId Int
  server PurgedServer @relation(fields: [serverId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model DeathStats {
  id Int @id @default(autoincrement())
  servers Int @default(0)
  kills Int @default(0)
  textChannels Int @default(0)
  voiceChannels Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}